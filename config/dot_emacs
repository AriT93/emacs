;;;  -*- lexical-binding: t;-*-
;;; .emacs --- Summary 
;; my emacs file
;;; Commentary:
;;; Code:

(add-to-list 'load-path (expand-file-name "~/emacs/config/"))

(require 'emacs-config-new)

;; Mac-specific key bindings (not in main config)
;; These set up Command and Option keys for Mac users
(setq mac-command-modifier 'meta)
(setq mac-option-modifier 'super)

;; Enable some disabled commands for convenience
;; These commands are disabled by default for safety but are useful
(put 'dired-find-alternate-file 'disabled nil)
(put 'narrow-to-region 'disabled nil)
(put 'downcase-region 'disabled nil)
(put 'upcase-region 'disabled nil)
;; Removed (org-agenda nil "n") - was causing slow startup by loading org-agenda immediately
;; Use M-x org-agenda RET n instead, or add a keybinding if needed

(message ".emacs loaded")

(provide '.emacs)
;;; .emacs ends here
